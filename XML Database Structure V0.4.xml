<recipes> <!--RECIPE DATABASE: holds the recipes-->
    <recipe id='1'> <!--A single recipe -->
        <title>Chili con Carne</title>
        <author idref='8'/>
        <information> <!--Container box for recipe details-->
            <description>A delicious recipe for oven-made chicken tenders!</description>
            <quantity>4</quantity> <!--How many servings-->
            <tools idref='t3'/> <!--Cooking utensils-->
            <time> <!--Container box for time details (**HOW TO LINK TO MEASUREMENTS**)-->
                <preptime>10 minutes</preptime>
                <cooktime>20 minutes</cooktime>
                <totaltime>30 minutes</totaltime>
            </time>
            <ingredients> <!--Container box for ingredients-->
                <ingredient idref='i2'>
                    <amount>1</amount>
                    <unit idref='m3'/>
                </ingredient>
            </ingredients>  
            <steps> <!--Container box for cooking instructions-->
                <step>1. Cut the chicken into little strips.</step>
                <step>3. Put in flour, then egg, then breadcrumbs.</step>
                <step>4. Bake at 180°C for 15 minutes.</step>
            </steps>
            <value_information> <!--Container box for recipe categories, allergens, tags, and nutrition information -->
                <cat_value idref='cv1'/> <!--recipe category-->
                <allge_value/> <!--allergen information (**IF NO VALUE, IS THE CONVENTION TO LEAVE IT LIKE THIS?**)-->
                <tag_value idref='tv3' idref_2='tv7'/> <!--recipe tags e.g. comfort food, quick & easy-->
                <nutrition/> <!--(**HOW TO LINK / HAVE TO CALCULATE**)-->
            </value_information>
        </information>
        <user_feedback/> <!--Linked to customerID and recipeID. Should show commnet text-->
        <URL>https://www.recipewebsite.com/recipe/chickentenders</URL> <!--Recipe URL-->
    </recipe>
</recipes>

