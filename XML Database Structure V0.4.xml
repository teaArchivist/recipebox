                    <nutr_value idref='calories'>350</nutr_value>
                    <nutr_value idref='fat'>15g</nutr_value>
                    <nutr_value idref='protein'>10g</nutr_value>
                    <nutr_value idref='carbs'>45g</nutr_value>
                    <nutr_value idref='sugar'>10g</nutr_value>
                    <nutr_value idref='sodium'>500mg</nutr_value>
                    <nutr_value idref='fiber'>8g</nutr_value>
                </nutrition> <!--(**HOW TO LINK / HAVE TO CALCULATE**)-->
            </value_information>
        </information>
